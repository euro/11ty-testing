<h1>Help</h1>
<h2>Topics</h2>
<ul>
  {% for tag in collections.articleTags %}
  {% set tagUrl %}/help/topics/{{ tag | slugify}}/{% endset %}
  <li><a href="{{ tagUrl | url }}">{{ tag }} Articles</a> <span class="small">({{ collections.articlesByTag[tag] | length }})</span></li>
  {% endfor %}
</ul>
<h2>Articles</h2>
{% set articles = collections.articles | sort(attribute='data.title') %}
<ul>
  {% for post in articles %}
  <li><a href="{{ post.url }}">{{ post.data.title }}</a></li>
  {% endfor %}
</ul>